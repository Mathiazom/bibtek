<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.image.ImageView?>

<?import java.net.URL?>
<?import javafx.scene.control.ScrollPane?>

<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import bibtek.ui.DigitsField?>

<AnchorPane styleClass="mainPane" prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="bibtek.ui.ViewBookController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <AnchorPane styleClass="toolbarPane">
            <VBox AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Label styleClass="toolbarTitle" text=""/>
            </VBox>
            <Button fx:id="editBookButton" styleClass="orangeButton" mnemonicParsing="false" onAction="#handleEditBook" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <FontIcon iconLiteral="mdi-pencil"/>
                </graphic>
            </Button>
            <Button fx:id="backButton" styleClass="grayButton" mnemonicParsing="false" onAction="#handleShowLibrary"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <FontIcon iconLiteral="mdi-arrow-left"/>
                </graphic>
            </Button>
        </AnchorPane>
        <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">

            <ScrollPane styleClass="edge-to-edge">
               <VBox id="infoContainerWrap" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                    <VBox id="infoContainer">

                        <ImageView fx:id="bookEntryImage" styleClass="bookEntryImage" fitWidth="120" preserveRatio="true"/>

                        <VBox styleClass="bookEntryInfo">

                            <Label fx:id="bookEntryTitle"/>
                            <Label fx:id="bookEntryAuthor"/>
                            <Label fx:id="bookEntryYearPublished"/>

                        </VBox>

                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>

    <stylesheets>
        <URL value="@BaseStyles.css"/>
        <URL value="@BaseBookStyles.css"/>
    </stylesheets>

</AnchorPane>
