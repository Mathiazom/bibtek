<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<AnchorPane prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bibtek.ui.AddBookController">
   <VBox alignment="CENTER" fillWidth="false" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <Group>
         <VBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0">
            <Label textFill="#212121" text="Add new book">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <VBox minHeight="-Infinity" minWidth="-Infinity">
               <Label textFill="#212121" text="Title">
                  <font>
                     <Font size="16.0" />
                  </font>
               </Label>
               <TextField fx:id="addBookTitleField" minWidth="400.0" style="-fx-background-color: #eee;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="18.0" />
                  </font>
               </TextField>
               <Label textFill="#212121" text="Author">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="addBookAuthorField" style="-fx-background-color: #eee;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
                  <font>
                     <Font size="18.0" />
                  </font>
               </TextField>
               <Label textFill="#212121" text="Year published">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </Label>
               <TextField fx:id="addBookYearPublishedField" style="-fx-background-color: #eee;">
                  <font>
                     <Font size="18.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </TextField>
               <Label textFill="#212121" text="Date acquired">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </Label>
               <DatePicker fx:id="addBookDatePicker" style="-fx-background-color: #eee; -fx-control-inner-background: #eee; -fx-faint-focus-color: #eee;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </DatePicker>
               <Label textFill="#212121" text="Reading status">
                  <font>
                     <Font size="16.0" />
                  </font>
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </Label>
               <ComboBox fx:id="addBookReadingStatusCombo" style="-fx-background-color: #ddd;">
                  <VBox.margin>
                     <Insets top="10.0" />
                  </VBox.margin>
               </ComboBox>
               <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
                  <VBox.margin>
                     <Insets top="50.0" />
                  </VBox.margin>
                  <Button fx:id="addBookButton" alignment="CENTER" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleAddBook" style="-fx-background-color: orange;" text="Add book" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button fx:id="libraryButton" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleShowLibrary" style="-fx-background-color: #454545;" text="Cancel" textFill="WHITE">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Button>
               </VBox>
               <VBox.margin>
                  <Insets top="40.0" />
               </VBox.margin>
            </VBox>
         </VBox>
      </Group>
   </VBox>
</AnchorPane>
