<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<?import java.net.URL?>
<?import javafx.scene.control.ScrollPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane styleClass="mainPane" prefHeight="800.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="bibtek.ui.AddBookController">
    <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <AnchorPane styleClass="toolbarPane">
            <VBox AnchorPane.bottomAnchor="0.0"
                  AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Label styleClass="toolbarTitle" text="Add new book"/>
            </VBox>
            <Button fx:id="confirmAddBookButton" mnemonicParsing="false" onAction="#handleAddBook"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <FontAwesomeIconView glyphName="CHECK_CIRCLE" size="38px"/>
                </graphic>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleShowLibrary"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="0.0">
                <graphic>
                    <FontAwesomeIconView glyphName="CLOSE" size="38px"/>
                </graphic>
            </Button>
        </AnchorPane>
        <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
            <ScrollPane styleClass="edge-to-edge">
               <VBox id="inputContainerWrap" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                    <VBox id="inputContainer">

                        <Label text="Title"/>
                        <TextField fx:id="addBookTitleField"/>

                        <Label text="Author"/>
                        <TextField fx:id="addBookAuthorField"/>

                        <Label text="Year published"/>
                        <TextField fx:id="addBookYearPublishedField"/>

                        <Label text="Cover image"/>
                        <TextField fx:id="addBookImagePathField"/>

                        <Label text="Date acquired"/>
                        <DatePicker fx:id="addBookDatePicker"/>

                        <Label text="Reading status"/>
                        <ComboBox fx:id="addBookReadingStatusCombo"/>

                    </VBox>
                </VBox>
            </ScrollPane>
        </VBox>
    </VBox>

    <stylesheets>
        <URL value="@BaseStyles.css"/>
        <URL value="@AddBookStyles.css"/>
    </stylesheets>

</AnchorPane>
